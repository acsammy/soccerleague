  </div>


  <div class="form-group row">
    <%= form.label :team_id, class:"col-sm-2 col-form-label"%>
    <%= collection_select(:team, :team_id, Team.all, :id, :name, prompt: true, class:"custom-select") %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
