<p id="notice"><%= notice %></p>

<h1>Players</h1>
<%= link_to 'New Player', new_player_path %>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Team</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @players.each do |player| %>
      <tr>
        <td><%= player.name %></td>
        <td><%= player.team.name %></td>
        <td><%= link_to 'Show', player %></td>
        <td><%= link_to 'Edit', edit_player_path(player) %></td>
        <td><%= link_to 'Destroy', player, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>

  </tbody>
</table>
<%= paginate @players, class: "apple_pagination", id: "apple_pagination" %>


<div class="row">
  <% Team.all.each do |team| %>
    <div class="col-lg-6 col-md-6 col-sm-6">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title"><%= team.name %></h5>
        </div>
        <ul class="list-group list-group-flush">
        <% @players.each do |player| %>
          <% if team.name == player.team.name%>
            <li class="list-group-item">
              <%= player.name %>
            </li>
            <div class="card-body">
              <%= link_to 'Edit', edit_player_path(player), class: "card-link" %>
              <%= link_to 'Destroy', player, method: :delete, data: { confirm: 'Are you sure?' }, class: "card-link" %>
            </div>
          <% end %>
        <% end %>
        </ul>
      </div>
      <br>
    </div>
  <% end %>
</div>
