<p id="notice"><%= notice %></p>
<div class="row">
<div class="col-lg-12 col-md-12 col-sm-12">
  <h1>Teams</h1>
  <%= link_to 'New Team', new_team_path, class: "btn btn-primary", style: "float:right;" %>
<br>
<br>
<table class="table table-hover ">
  <thead class="thead-dark">
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teams.each do |team| %>
      <tr>
        <td>
        <%= link_to team do %>
          <%= team.name %>
        <% end%>
      </td>
        <td><%= link_to 'Edit', edit_team_path(team) %></td>
        <td><%= link_to 'Destroy', team, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @teams, class: "pagination", id: "apple_pagination" %>
<br>

</div>
</div>
