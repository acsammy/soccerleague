<p id="notice"><%= notice %></p>
<div class="row">
<div class="col-lg-12 col-md-12 col-sm-12">
  <h1>Teams</h1>
  <% if admin_signed_in? %>
    <%= link_to 'New Team', new_team_path, class: "btn btn-primary", style: "float:right;" %>
  <% end %>

<br>
<br>
<table class="table table-hover ">
  <thead >
    <tr>
      <th>Name</th>
    </tr>
  </thead>

  <tbody>
    <% @teams.each do |team| %>
      <tr>
        <td>
        <%= link_to team do %>
          <%= team.name %>
        <% end%>
    <% end %>
  </tbody>
</table>

<div class="digg_pagination">
  <div class="page_info">
    <%= page_entries_info @posts %>
  </div>
  <%= will_paginate @posts, :container => false %>
</div>

</div>
</div>
