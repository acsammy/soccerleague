<%= form_with(model: match, local: true) do |form| %>
  <% if match.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(match.errors.count, "error") %> prohibited this match from being saved:</h2>

      <ul>
      <% match.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="col-lg-6 col-md-6 col-sm-6">
  <div class="form-group">
    <%= form.label :home_id, for:"formGroupExampleInput" %>
    <%= form.select :home_id, options_for_select(Team.all.map{|s|[s.name, s.id]}, class:"form-control", id:"formGroupExampleInput") %>
  </div>
  <div class="form-group">
    <%= form.label :score1 %>
    <%= form.number_field :score1, class:"form-control" %>
  </div>


  <div class="form-group">
    <%= form.label :visitor_id, for:"formGroupExampleInput2" %>
    <%= form.select :visitor_id, options_for_select(Team.all.map{|s|[s.name, s.id]}, class:"form-control", id:"formGroupExampleInput2") %>
  </div>
  <div class="form-group">
    <%= form.label :score2 %>
    <%= form.number_field :score2, class:"form-control" %>
  </div>

  <div class="field">
    <%= form.label :championship_id %>
    <%= form.select :championship_id, options_for_select(Championship.all.map{|s|[s.name, s.id]}) %>
  </div>

  <br>
  <div class="actions">
    <%= form.submit %>
  </div>
</div>

<% end %>
